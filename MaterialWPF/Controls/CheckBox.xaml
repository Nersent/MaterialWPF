<UserControl x:Class="MaterialWPF.CheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaterialWPF"
             mc:Ignorable="d" 
             Cursor="Hand"
             Background="Transparent"
             d:DesignHeight="300" d:DesignWidth="300" MouseDown="UserControl_MouseDown">

    <Grid Height="42" Width="42">
        <Ellipse x:Name="Ripple" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Height="0" Width="0"/>
        <Border x:Name="border" BorderBrush="#8c000000" CornerRadius="2" BorderThickness="2" Width="16" Height="16"></Border>
        <Border Opacity="0" x:Name="background" CornerRadius="2" Width="16" Height="16" Background="#FF1ABC9C">
            <Grid>
                <Image Source="pack://application:,,,/MaterialWPF;component/Icons/done_white.png" Margin="0"></Image>
            <Border Opacity="0" x:Name="background2" CornerRadius="2" Width="16" Height="16" Background="#FF1ABC9C"/>
            </Grid>
        </Border>
        
    </Grid>
</UserControl>
