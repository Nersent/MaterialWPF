<UserControl x:Class="MaterialWPF.CircularHalf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaterialWPF"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="32"
             Loaded="UserControl_Loaded">
    <Grid ClipToBounds="True" RenderTransformOrigin="0.5,0.5">
        <Grid x:Name="grid" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Ellipse x:Name="ellipse" Stroke="Blue" StrokeDashArray="20 20 20" RenderTransformOrigin="0.5,0.5" StrokeStartLineCap="Square" StrokeDashCap="Square" StrokeThickness="3"/>
        </Grid>
    </Grid>
</UserControl>
