<UserControl x:Class="MaterialWPF.linearDeterminate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaterialWPF"
             mc:Ignorable="d" 
             d:DesignHeight="5" d:DesignWidth="400"
             Background="Transparent" Loaded="UserControl_Loaded" SizeChanged="UserControl_SizeChanged">
    <Grid>
        <Border x:Name="background"  Background="#c0d4e7" CornerRadius="0.5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid>
                 <Border x:Name="Divider" Background="#3d87f0" CornerRadius="0.5" Width="0" HorizontalAlignment="Left" VerticalAlignment="Stretch"></Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>