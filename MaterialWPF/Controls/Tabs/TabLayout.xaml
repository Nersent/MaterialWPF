<UserControl x:Class="MaterialWPF.TabLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaterialWPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="Main">
        <Grid x:Name="container" Margin="0,47,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            

        </Grid>
        <local:TabBar x:FieldModifier="public" x:Name="tabBar" HorizontalAlignment="Stretch" Height="48" VerticalAlignment="Top">
            <local:TabBar.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.4"/>
            </local:TabBar.Effect>
        </local:TabBar>

    </Grid>
</UserControl>
