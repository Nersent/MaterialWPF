<UserControl x:Class="MaterialWPF.Tooltip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaterialWPF"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="100"
             Background="Transparent">
    <Grid x:Name="grid" ClipToBounds="True">
        <Border x:Name="ripple" Opacity="0.8" Background="#323232" CornerRadius="2" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
            <TextBlock x:Name="ContentText" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Tooltip" FontFamily="/MaterialWPF;component/Fonts/Roboto/#Roboto" FontSize="16" Foreground="White"/>
        </Border>
       
    </Grid>
</UserControl>