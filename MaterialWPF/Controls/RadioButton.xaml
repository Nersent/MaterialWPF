<UserControl x:Class="MaterialWPF.RadioButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaterialWPF"
             mc:Ignorable="d" 
             Cursor="Hand"
             Background="Transparent"
             d:DesignHeight="300" d:DesignWidth="300" MouseDown="UserControl_MouseDown">
    <Grid ClipToBounds="True" Height="42" Width="42">
        <Ellipse x:Name="Ripple" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Height="0" Width="0"/>
        <Border x:Name="border" Width="15" Height="15" CornerRadius="10" BorderThickness="1.5" BorderBrush="Black">

        </Border>
        <Ellipse x:Name="circle" Width="0" Height="0" Fill="Black" ></Ellipse>

    </Grid>
</UserControl>